<%- include('../partials/head') %>



    <div class="container">

        <% if (messages.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% for (let msg of messages) { %>
                        <li>
                            <%= msg %>
                        </li>
                        <% } %>
                </ul>
            </div>
            <% } %>

                <form method="POST" action="/workers">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                        <div id="name" class="form-text">*Please input your name as per NRIC</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" class="form-control" id="image" name="image">
                        <!-- <div class="input-group mb-3">
                        <input type="text" class="form-control" id="image" name="image">
                        <label class="input-group-text" for="inputGroupFile02">Upload image</label> -->

                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" name="address">
                        <div class="mb-3">
                            <label for="contact" class="form-label">Contact</label>
                            <input type="text" class="form-control" id="contact" name="contact">
                        </div>
                        <div class="radio">
                            <input type="radio" id="vaccinated" name="status" value="vaccinated">
                            <label for="male">Vaccinated</label><br>
                            <input type="radio" id="not-vaccinated" name="status" value="not-vaccinated">
                            <label for="female">Not Vaccinated</label><br>
                        </div>
                    </div>
                    <br>



                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

    </div>


    <%- include('../partials/foot') %>